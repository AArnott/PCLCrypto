<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net45;portable-win81+wpa81</TargetFrameworks>

    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="NetFxRSA\**" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetsWinRT)' == 'true' ">
    <Compile Remove="NetFx\**" />
    <Compile Remove="NetFxSymmetric\**" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="PInvoke.NCrypt" Version="0.5.64" Condition=" '$(TargetsDesktop)' == 'true' or '$(TargetsWinRT)' == 'true' " />
    <PackageReference Include="MSBuild.Sdk.Extras" Version="1.0.0" />
  </ItemGroup>
  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
</Project>