<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
	<metadata minClientVersion="2.7.2">
		<id>PCLCrypto</id>
		<version>0.0.1</version>
		<title>PCL Crypto - Portable Crypto APIs</title>
		<authors>Andrew Arnott</authors>
		<owners>Andrew Arnott</owners>
		<licenseUrl>https://github.com/AArnott/PCLCrypto/blob/master/LICENSE</licenseUrl>
		<projectUrl>https://github.com/AArnott/PCLCrypto</projectUrl>
		<requireLicenseAcceptance>false</requireLicenseAcceptance>
		<description>PCL Crypto provides a consistent, portable set of crypto APIs for .NET, Windows Phone, Windows Store, Xamarin.iOS, Xamarin.Android, and Silverlight.  This makes it easier to create cross-platform .NET libraries and apps.</description>
		<summary>PCL Storage provides a consistent, portable set of crypto APIs across .NET platforms.</summary>
		<tags>crypto security cryptography portable pcl winrt android ios xamarin monoandroid monodroid monotouch</tags>
		<dependencies>
			<group>
				<!--<dependency id="Microsoft.Bcl.Async" version="1.0.165" />
				<dependency id="Microsoft.Bcl" version="1.0.19" />-->
				<dependency id="Validation" />
			</group>
		</dependencies>
	</metadata>
	<files>
		<!-- PCLs can't target Windows 8.1, so just install on Windows 8.0 PCLs.
		     the platform-specific lib folder will indicate Windows 8.1 is required. -->
		<file target="lib\portable-net403+sl50+wp80+win+MonoAndroid10+MonoTouch10" src="$OutputPath$PCLCrypto\PCLCrypto.*" />

		<file target="lib\net45" src="$OutputPath$PCLCrypto.Desktop\PCLCrypto.*" />

		<file target="lib\sl5" src="$OutputPath$PCLCrypto.Silverlight\PCLCrypto.*" />

		<file target="lib\wp8" src="$OutputPath$PCLCrypto.WindowsPhone\PCLCrypto.*" />

		<file target="lib\win81" src="$OutputPath$PCLCrypto.WinRT\PCLCrypto.*" exclude="$OutputPath$PCLCrypto.WinRT\*.pri" />

		<file target="lib\monoandroid" src="$OutputPath$PCLCrypto.Android\PCLCrypto.*" exclude="$OutputPath$PCLCrypto.Android\*.mdb" />

		<file target="lib\monotouch" src="$OutputPath$PCLCrypto.iOS\PCLCrypto.*" exclude="$OutputPath$PCLCrypto.iOS\*.mdb" />
	</files>
</package>